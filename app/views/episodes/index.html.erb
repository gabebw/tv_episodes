<h1>All episodes<%= " for #{@show.name}" unless @show.nil? %>
</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Season</th>
    <th>Number</th>
  </tr>


<% @episodes.each do |episode| %>
  <tr>
    <td><%=h episode.name %></td>
    <td><%=h episode.season %></td>
    <td><%=h episode.number %></td>
    <td><%= link_to 'Show', episode %></td>
    <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
    <td><%= link_to 'Destroy', episode, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if params[:show_id] %>
  <%= link_to 'New episode', new_show_episode_path(params[:show_id]) %>
<% else %>
  <%= link_to 'New episode', new_episode_path %>
<% end %>