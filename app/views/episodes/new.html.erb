<h1>New episode</h1>

<% form_for(@episode) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :season %><br />
    <%= f.text_field :season %>
  </p>
  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%# Pre-select the show if given /shows/:show_id/episodes/new %>
    <%= collection_select(:episode, :show_id, Show.all, :id, :name, {:selected => lambda {|x| params[:show_id ]} }) %>
    or <%= link_to "Add a new show", new_show_path %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', episodes_path %>